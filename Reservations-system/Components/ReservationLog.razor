@page "/log"
@foreach (var reservationID in TestReservationList.ListOfReservations)
{<tr>
     <button class="btn btn-primary"  type="submit">
         Reservations ID @reservationID.ID <br /> 
         Bekræftet: @(reservationID.Confirmed == true ? "Ja" : "Nej") <br />
         Tidspunkt: @reservationID.ReservationFormatDates() <br />
     </button>
    </tr>
}

@foreach (var reservationDetail in TestReservationList.ListOfReservations)
{
    <p>
        Reservation @reservationDetail.ID
    </p>
    <p>
        Bekræftet: @(reservationDetail.Confirmed == true ? "Ja" : "Nej")
    </p>
    <p>
        Tidspunkt: @reservationDetail.ReservationFormatDates()
    </p>
    <p>
        Gæst: @reservationDetail.CitizenGuest.GuestFullName()
    </p>
    <p>
        Telefonnumer: @reservationDetail.CitizenGuest.PhoneNumber
    </p>
    <p>
        Email: @reservationDetail.CitizenGuest.Mail
    </p>
    <p>
        Rengøring: @(reservationDetail.Cleaning == true ? "Ja" : "Nej")
    </p>
    <p>
        Eventuelle info: @reservationDetail.OtherInfo
    </p>

    <p>
        <br />
        ------------------------------------------------
    </p>
}

