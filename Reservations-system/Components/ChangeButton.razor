
<button class="@Css" @onclick="(e => ChangeCurrentReservation(Reservation))" disabled="@IsDisabled">@Title</button>


@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Css { get; set; }

    [Parameter]
    public bool IsDisabled { get; set; }

    [Parameter]
    public Reservation Reservation { get; set; }

    [Parameter]
    public EventCallback<Reservation> ReservationChanged { get; set; }

    public async Task ChangeCurrentReservation(Reservation reservation)
    {
        await ReservationChanged.InvokeAsync(reservation);
    }

}